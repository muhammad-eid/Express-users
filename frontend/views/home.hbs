{{>header}}
{{>nav}}
<div class="container mx-5">
    {{#if users}}
    <table class="table">
    <thead>
        <tr>
        <th scope="col">Name</th>
        <th scope="col">Status</th>
        <th scope="col">Action</th>
        </tr>
    </thead>
    {{#each users}}
    <tbody>
        <tr>
        <td>{{this.name}}</td>
        <td>{{this.status}}</td>
        <td>
            <a href="/togelStatus/{{this.id}}" class="btn btn-primary">Change Status</a>
            <a href="/view/{{this.id}}" class="btn btn-primary">View</a>
            <a href="/edit/{{this.id}}" class="btn btn-warning">Edit</a>
            <a href="/delete/{{this.id}}" class="btn btn-danger">Delete</a>
        </td>
        </tr>
    {{/each}}
    </tbody>
    </table>
    {{else}}
    <div class="alert alert-danger" role="alert">
    There is No users
    </div>

    {{/if}}
</div>
{{>footer}}